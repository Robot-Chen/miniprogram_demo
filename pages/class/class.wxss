.body {
    width: 100%;
    padding: 23rpx 15rpx 0rpx 25rpx;
}

.header-right-search {
    height: 66rpx;
    width: 100%;
    margin-bottom: 32rpx;
    background-color: #F0F3F5;
    color: #ffffff;
    border-radius: 25rpx;
    display: flex;
    flex-flow: row nowrap;
    align-items: center;
    justify-content: flex-start;
}

.index_search_container {
    position: absolute;
    left: 182rpx;
}

.index_search {
    width: 35rpx;
}

.header-font-btn {
    margin: 0 auto;
    color: #99A3A9;
    font-size: 28rpx;
    height: 40rpx;
    line-height: 40rpx;
}

.tab-content {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 300px;
}

.classes-view {
    overflow-x: scroll;
    overflow-y: hidden;
    white-space: nowrap;
    width: 650rpx;
    display: flex;
    flex-flow: row;
    justify-content: flex-start;
    align-content: center;
    align-items: center;
}

.classes-view .noclick {
    height: 46rpx;
    margin-right: 46rpx;
    font-size: 26rpx;
    color: #545F66;
    line-height: 46rpx;
    white-space: nowrap;
}

::-webkit-scrollbar {
    width: 0;
    height: 0;
    color: transparent;
}

.classes-view .click {
    height: 46rpx;
    margin-right: 46rpx;
    font-size: 32rpx;
    color: #545F66;
    line-height: 46rpx;
    white-space: nowrap;
    border-bottom: 4rpx #009EFF solid;
}

.edit-add {
    width: 40rpx;
    float: right;
    margin-top: -45rpx;
}

.books-view {
    margin-top: 40rpx;
    height: 1100rpx;
}

.right {
    margin-right: 58rpx;
}

.book-view {
    max-width: 195rpx;
    display: inline-flex;
    flex-flow: column nowrap;
    justify-content: center;
    align-content: center;
    align-items: flex-start;
}

.book-view image {
    width: 190rpx;
    height: 260rpx;
}

.book-view text {
    color: #99A3A9;
    font-size: 24rpx;
    line-height: 30rpx;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 1;
    overflow: hidden;
    margin-bottom: 38rpx;
}

.text-title {
    margin-top: 18rpx;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
    font-size: 26rpx;
    line-height: 32rpx;
    min-height: 64rpx;
}

.new-user-view {
    position: fixed;
    z-index: 998;
    background-color: #000512;
    top: 0rem;
    left: 0rem;
    width: 100%;
    height: 100%;
    opacity: 0.7;
}

.new-user-view text {
    position: fixed;
    top: 280rpx;
    font-size: 26rpx;
    color: #FFC80D;
    right: 20rpx;
}

.classes-view-new {
    white-space: nowrap;
    width: 100%;
    display: flex;
    flex-flow: row;
    justify-content: flex-start;
    align-content: center;
    align-items: center;
    position: fixed;
    z-index: 999;
    top: 98rpx;
    left: 0rpx;
    background-color: white;
}

.classes-view-new .noclick {
    height: 65rpx;
    margin-right: 46rpx;
    font-size: 32rpx;
    line-height: 65rpx;
    white-space: nowrap;
}

.classes-view-new .noclick-first {
    height: 65rpx;
    margin-right: 46rpx;
    margin-left: 23rpx;
    font-size: 32rpx;
    line-height: 65rpx;
    white-space: nowrap;
}

.classes-view-new image {
    width: 32rpx;
}

.zhidao-image {
    width: 78rpx;
    height: 88rpx;
    position: fixed;
    top: 190rpx;
    right: 44rpx;
}

.hidden {
    height: 11.45rem;
    padding: 23rpx 20rpx 0rpx 20rpx;
}