page {
    color: #545F66;
    font-size: 30rpx;
}

text {
    line-height: 1;
}

view {
    box-sizing: border-box;
}

button:after {
    border: none;
}

.container {
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    box-sizing: border-box;
}

.center {
    display: -webkit-box;
    display: -ms-flexbox;
    display: -webkit-flex;
    display: flex;
    align-items: center;
    justify-content: center;
    -webkit-box-pack: center;
}

.start {
    display: -webkit-box;
    display: -ms-flexbox;
    display: -webkit-flex;
    display: flex;
    align-items: center;
    justify-content: flex-start;
}

.end {
    display: -webkit-box;
    display: -ms-flexbox;
    display: -webkit-flex;
    display: flex;
    align-items: center;
    justify-content: flex-end;
}

.space-between {
    display: -webkit-box;
    display: -ms-flexbox;
    display: -webkit-flex;
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.space-around {
    display: -webkit-box;
    display: -ms-flexbox;
    display: -webkit-flex;
    display: flex;
    align-items: center;
    justify-content: space-around;
}

.empty-view {
    text-align: center;
    margin-top: 40%;
}

.empty-view-title {
    font-family: 黑体;
    font-size: 28rpx;
    text-align: center;
}

.empty-view-title text {
    margin-left: 4%;
}

.content {
    margin: 0;
    padding: 0;
    width: 100%;
    height: 100%;
    background-color: #f0f3f5;
}

.f28 {
    font-size: 28rpx!important;
}

.f24 {
    font-size: 24rpx!important;
}

.cutline-thick-line {
    border-bottom: 20rpx solid #F0F3F5;
}

.about-book {
    padding: 2% 0 4% 5%;
    border-bottom: 2rpx solid #F0F3F5;
}

.about-book .book-cover {
    width: 128rpx;
    height: 178rpx;
    margin-right: 40rpx;
    box-shadow: 2rpx 2rpx 6rpx 0 #99A3A9;
}

.about-book .book-cover image {
    width: 100%;
    height: 100%;
}

.about-book .book-info .book-title {
    font-size: 28rpx;
    color: #000000;
}

.about-book .book-info .book-contain {
    margin-top: 2rpx;
    font-size: 24rpx;
    font-family: 黑体;
    color: #99A3A9;
    letter-spacing: 0.31rpx;
}

.page-container {
    padding: 0;
    margin: 0;
    height: 100%;
}

.login-mask {
    width: 100%;
    height: 100%;
    position: fixed;
    left: 0;
    background: rgba(0,0,0,0.7);
    z-index: 9000;
    top: 0;
}

.login-mask .modalDlg {
    width: 580rpx;
    height: 380rpx;
    position: fixed;
    top: 25%;
    z-index: 9999;
    margin: 0rpx 100rpx 185rpx 100rpx;
    background-color: #fff;
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 45rpx 30rpx;
    text-align: center;
}

.login-mask .modalDlg .title {
    margin-bottom: 69rpx;
    font-size: 35rpx;
    color: #333333;
}

.login-mask .modalDlg .bottom {
    width: 100%;
}

.login-mask .modalDlg .bottom button {
    font-size: 35rpx;
    margin-top: 60rpx;
    background-color: #fff;
    width: 30%;
}

.login-mask .modalDlg .bottom button:after {
    border: none;
}

.login-mask .modalDlg .bottom button:last-child {
    color: #009eff;
}

.message-alert {
    position: fixed;
    bottom: 127rpx;
    left: 0;
    width: 100%;
}

.message-alert view {
    line-height: 64rpx;
    height: 64rpx;
    background-color: #ddd;
    border-radius: 30rpx;
    font-size: 24rpx;
    padding: 0 20rpx;
}